# Application
APP_NAME=Jodi_Milan
APP_ENV=development
APP_PORT=3000
APP_URL=http://localhost:3000
NODE_ENV=development

# Database (MySQL - Same as Laravel)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=matrimonial
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_DIALECT=mysql
DB_LOGGING=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=14d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this
ENCRYPTION_IV=your-16-char-iv

# OTP
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# SMS (WebSenor Gateway)
SMS_GATEWAY_URL=https://sms.websenor.com/api/sendhttp.php
SMS_USERNAME=your_sms_username
SMS_PASSWORD=your_sms_password
SMS_SENDER_ID=JODMLN
SMS_ROUTE=4

# Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_FROM_ADDRESS=noreply@jodimilan.com
MAIL_FROM_NAME=Jodi_Milan

# Firebase
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_PATH=./config/firebase-credentials.json
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# CCAvenue
CCAVENUE_MERCHANT_ID=your_merchant_id
CCAVENUE_WORKING_KEY=your_working_key
CCAVENUE_ACCESS_CODE=your_access_code
CCAVENUE_REDIRECT_URL=http://localhost:3000/api/ccavenue/callback
CCAVENUE_CANCEL_URL=http://localhost:3000/api/ccavenue/cancel

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
